{
  "$schema": "https://schema.tauri.app/config_2",
  "identifier": "com.radial.builder",
  "productName": "Plasticity Radial Menu Builder",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "capabilities": ["radial"]
    },
    "windows": [
      {
        "title": "Plasticity Radial Menu Builder",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "digestAlgorithm": "sha256"
    },
    "macOS": {
      "entitlements": "app.entitlements",
      "signingIdentity": null,
      "hardenedRuntime": false
    }
  },
  "plugins": {}
}