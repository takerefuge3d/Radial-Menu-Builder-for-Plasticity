{
  "$schema": "https://schema.tauri.app/v2/capabilities.json",
  "identifier": "radial",
  "description": "Capabilities for Radial Menu Builder (dialog pickers + scoped FS access).",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file", 
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$RESOURCE/**"
        }
      ]
    }
  ]
}